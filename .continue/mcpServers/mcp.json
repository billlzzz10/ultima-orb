{
  "servers": {
    "notion": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@notionhq/notion-mcp-server@latest"
      ],
      "env": {
        "NOTION_TOKEN": "your_notion_token",
        "OPENAPI_MCP_HEADERS": "{\"Authorization\": \"Bearer your_notion_token\", \"Notion-Version\": \"2022-06-28\" }"
      },
      "gallery": true
    },
    "airtable": {
      "command": "npx",
      "args": [
        "-y",
        "@airtable/mcp@latest"
      ],
      "type": "stdio"
    },
    "clickup": {
      "command": "npx",
      "args": [
        "-y",
        "@clickup/mcp@latest"
      ],
      "type": "stdio"
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "type": "stdio"
    }
  }
}
