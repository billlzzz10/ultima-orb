{
  "projectName": "Ultima-Orb",
  "description": "Advanced AI-powered Obsidian plugin with multi-provider support, knowledge management, and automation tools",
  "version": "1.0.0",
  "language": "typescript",
  "framework": "obsidian-plugin",
  "aiSettings": {
    "model": "gpt-4",
    "temperature": 0.1,
    "maxTokens": 4000,
    "contextWindow": 8000
  },
  "codingGuidelines": {
    "language": "thai",
    "style": "strict",
    "patterns": [
      "use TypeScript strict mode",
      "implement proper error handling",
      "use async/await for promises",
      "follow Obsidian plugin guidelines",
      "write comprehensive tests",
      "use ESLint and Prettier"
    ]
  },
  "fileStructure": {
    "src": {
      "main.ts": "Plugin entry point",
      "services": "Core services (Logger, EventsBus, Storage, CredentialManager)",
      "ai": "AI providers and orchestrator",
      "core": "Business logic managers",
      "integrations": "External service clients",
      "tools": "Tool implementations",
      "ui": "User interface components",
      "automation": "Obsidian commands and automation",
      "types": "Type definitions"
    },
    "test": "Test suites",
    "docs": "Documentation",
    "scripts": "Build and utility scripts"
  },
  "dependencies": {
    "obsidian": "peer dependency",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "developmentTools": {
    "linting": "ESLint with TypeScript rules",
    "formatting": "Prettier",
    "testing": "Vitest",
    "building": "esbuild",
    "typeChecking": "TypeScript compiler"
  },
  "qualityGates": {
    "testCoverage": 80,
    "lintErrors": 0,
    "typeErrors": 0,
    "buildSuccess": true
  },
  "automation": {
    "preCommit": [
      "npm run lint",
      "npm run test",
      "npm run build"
    ],
    "prePush": [
      "npm run test:coverage",
      "npm run type-check"
    ]
  }
}