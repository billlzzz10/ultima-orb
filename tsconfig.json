{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "CommonJS",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [ "DOM", "ES6", "ES2021" ],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [ "**/*.ts", "src/types/*.d.ts" ]
}
